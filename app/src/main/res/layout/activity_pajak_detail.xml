<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bright_background"
    android:padding="20dp"
    tools:context=".PajakDetailActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_header_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:contentPadding="24dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@color/bright_surface">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_detail_nama_pajak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Pajak: - "
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/energetic_primary"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/tv_detail_tahun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tahun: "
                android:textSize="18sp"
                android:textColor="@color/bright_on_surface_variant"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_summary_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:contentPadding="24dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/card_header_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@color/bright_surface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ringkasan Data"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/bright_on_surface"
                android:layout_marginBottom="14dp"/>

            <TextView
                android:id="@+id/tv_detail_target"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Target: Rp0,00"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/energetic_primary"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tv_detail_realisasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Realisasi: Rp0,00"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/energetic_tertiary"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/tv_detail_persentase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Persentase: 0,00%"
                android:textSize="18sp"
                android:textStyle="italic"
                android:textColor="@color/energetic_secondary"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_triwulan_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:contentPadding="24dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/card_summary_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@color/bright_surface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Target Per Triwulan:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/bright_on_surface"
                android:layout_marginBottom="14dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/bright_divider"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tv_tw1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TW1: 0.00%"
                android:textSize="18sp"
                android:textColor="@color/bright_on_surface_variant"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/tv_tw2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TW1: 0.00%"
                android:textSize="18sp"
                android:textColor="@color/bright_on_surface_variant"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/tv_tw3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TW1: 0.00%"
                android:textSize="18sp"
                android:textColor="@color/bright_on_surface_variant"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/tv_tw4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TW1: 0.00%"
                android:textSize="18sp"
                android:textColor="@color/bright_on_surface_variant"
                android:layout_marginBottom="6dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/bright_divider"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tv_target_narasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:background="@android:color/white"
                android:visibility="gone" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <ProgressBar
        android:id="@+id/detail_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/card_triwulan_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

    <TextView
        android:id="@+id/tv_detail_error_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/detail_progress_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>