<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".TotalPajakDetailActivity">

    <TextView
        android:id="@+id/tv_total_pajak_title_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ringkasan Total Pajak Daerah"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/tv_total_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Target: Rp0,00"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tv_total_realisasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Realisasi: Rp0,00"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tv_total_persentase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Persentase: 0.00%"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Catatan: Total target diambil dari API detail (per tahun 2025). Total realisasi diambil dari data ringkasan periode tanggal yang Anda pilih."
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:padding="8dp"
        android:background="@android:color/white"/>

</LinearLayout>